{
  "name": "wildgreen-blog",
  "version": "1.0.0",
  "description": "Static blog for wildgreen.blog built with Astro",
  "author": "Echo Reader",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "npm run dev",
    "check": "astro check",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "format": "prettier -w .",
    "generate-sitemap-post": "node scripts/generate-sitemap-post.js",
    "generate-sitemap-page": "node scripts/generate-sitemap-page.js",
    "generate-sitemap-index": "node scripts/generate-sitemap-index.js",
    "generate-sitemap": "npm run generate-sitemap-post && npm run generate-sitemap-page && npm run generate-sitemap-index"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.1",
    "@astrojs/partytown": "^2.1.2",
    "@astrojs/rss": "^4.0.10",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^6.0.0",
    "@iconify-json/tabler": "^1.1.116",
    "astro": "^5.0.3",
    "astro-icon": "^1.1.5",
    "astro-pagefind": "^1.5.0",
    "dayjs": "^1.11.11",
    "gray-matter": "^4.0.3",
    "pagefind": "^1.1.1",
    "preline": "^2.3.0",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.2",
    "typescript": "^5.5.2"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/echoreader/wildgreen.blog"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
