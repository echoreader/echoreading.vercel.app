---
import BaseLayout from "@layouts/BaseLayout.astro";

const type = "disclaimer";
---

<BaseLayout
  title="Disclaimer"
  description="Read this disclaimer to understand the limitations of the information provided on this blog."
  type={type}, url={Astro.url.href}
>

  <section class="py-10 text-center max-w-2xl mx-auto">
