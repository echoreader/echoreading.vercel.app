---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
  description: string;
  type?: string;
  url?: string;
  featuredImage?: string;
  datePublished?: string;
  dateModified?: string;
  wordCount?: number;
  articleBody?: string;
  itemList?: { title: string; url: string }[];
}

const {
  title,
  description,
  type,
  url,
  featuredImage,
  datePublished,
  dateModified,
  wordCount,
  articleBody,
  itemList = []
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} type={type} url={Astro.url.href}/>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
  </head>
  <body
    class="flex flex-col min-h-screen mx-auto max-w-6xl px-4 dark:prose-invert sm:px-6 lg:px-8 dark:bg-neutral-900"
  >
    <Header />
    <main class="flex-grow">
      <slot />
    </main>

    <Footer />
  </body>
</html>
