---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
  description: string;
  type?: string;
  url?: string;
  featuredImage?: string;
  datePublished?: string;
  dateModified?: string;
  wordCount?: number;
  articleBody?: string;
  itemList?: { title: string; url: string }[];
}

const {
  title,
  description,
  type,
  url,
  featuredImage,
  datePublished,
  dateModified,
  wordCount,
  articleBody,
  itemList = []
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- 1. SEO + global scripts via BaseHead (centralized) -->
    <BaseHead title={title} description={description} type={type} url={Astro.url.href} />
  </head>

  <body class="m-0 flex flex-col min-h-screen dark:bg-neutral-900 dark:prose-invert">
    <!-- Header full width -->
    <Header />

    <!-- Main content container -->
    <main class="flex-grow max-w-4xl mx-auto px-3 sm:px-6 lg:px-8">
      <slot />
    </main>

    <!-- Footer full width -->
    <Footer />
  </body>
</html>
