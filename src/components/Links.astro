---
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const safeHref = typeof href === "string" ? href : "";

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isActive = safeHref === pathname || safeHref === "/" + subpath?.[0];

const isInternal = safeHref.startsWith("/");
const fullHref = isInternal ? new URL(safeHref, Astro.site).toString() : safeHref;
---

<a href={fullHref} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
