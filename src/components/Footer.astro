---
import { Icon } from "astro-icon/components";
import Link from "@components/Links.astro";
import { BRAND_NAME } from "@consts";
const today = new Date();

const isDev = import.meta.env.DEV;
const base = isDev ? 'http://localhost:4321' : Astro.site?.href ?? 'https://wildgreen.blog';
const resolve = (path: string): string => new URL(path, base).href;
---

<footer class="mt-auto w-full py-6 shadow-inner bg-white">
  <nav class="max-w-4xl mx-auto px-3 flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4" aria-label="Footer">
    
    <!-- Left: Brand Name + Year -->
    <div class="text-sm text-neutral-700 dark:text-neutral-400">
      {BRAND_NAME} &copy; {today.getFullYear()}
    </div>

    <!-- Right: Links (3 baris) -->
    <div class="flex flex-col items-start gap-2 text-sm text-neutral-500 dark:text-neutral-500">
      <a href={resolve("/contact/")} class="no-underline hover:text-neutral-800 dark:hover:text-neutral-200">
        Contact
      </a>
      <a href={resolve("/disclaimer/")} class="no-underline hover:text-neutral-800 dark:hover:text-neutral-200">
        Disclaimer
      </a>
      <a href={resolve("/privacy-policy/")} class="no-underline hover:text-neutral-800 dark:hover:text-neutral-200">
        Privacy Policy
      </a>
    </div>
  </nav>
</footer>


